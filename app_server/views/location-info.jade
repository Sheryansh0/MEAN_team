extends layout

block content
  .row.banner
    .col-12
      h1 Dharma Donation

  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
          .card.card-primary
            .card-body
              h2.card-title Whom do you want to donate to?
              .badges
                span.badge.badge-warning
                  i.fa.fa-check
                  | &nbsp; Children
                | &nbsp;
                span.badge.badge-warning
                  i.fa.fa-check
                  | &nbsp; Old Age
                | &nbsp;
                span.badge.badge-warning
                  i.fa.fa-check
                  | &nbsp; Handicrafts

    .row
      .col-12
        .card.card-primary.review-card
          .card-body
            h2.card-title Customer Reviews
            a.btn.btn-primary.float-right(href='/location/review/new') ➥ Donate
            .row.review
              .col-12.no-gutters.review-header
                span.rating
                  i.fas.fa-star
                  i.fas.fa-star
                  i.fas.fa-star
                  i.fas.fa-star
                  i.fas.fa-star
            
                span.review-author Akash
                small.review-timestamp(style='margin-left: 20px;') 16 February 2017
              .col-12
                p What a great place to donate.

            .row.review
              .col-12.no-gutters.review-header
                span.rating
                  i.fas.fa-star
                  i.fas.fa-star
                  i.fas.fa-star
                  i.fas.fa-star
                  i.far.fa-star
                span.review-author Nani
                small.review-timestamp(style='margin-left: 20px;') 14 February 2017
              .col-12
                p Nice place to donate.

    .col-12.col-lg-3
      p.lead
        | IT IS A TRUSTED DONATION PLATFORM THAT PROVIDES SERVICE FOR PEOPLE WORLDWIDE.
      p
        | If you've been here and you like it—or even if you don't—please leave a review to help others just like you.
